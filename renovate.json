{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "github>aquaproj/aqua-renovate-config#2.8.1"
  ],
  "schedule": [
    "every weekend"
  ],
  "commitMessagePrefix": "chore(renovate): ",
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "automerge": true,
      "platformAutomerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true
  }
}
